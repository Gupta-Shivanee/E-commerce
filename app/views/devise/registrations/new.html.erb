<h2>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class = containers>
    <div class = 'form-group row'>
      <%= f.label :username, class: 'col-md-3' %>
      <div class = 'col-md-9'>
        <%= f.text_field :full_name, class: 'form-control' %>
      </div>
    </div>
    <div class = 'form-group row'>
      <%= f.label :email, class: 'col-md-3' %>
      <div class = 'col-md-9'>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>
    <div class = 'form-group row'>
      <%= f.label :password, class: 'col-md-3' %>
      <div class = 'col-md-9'>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>
    <div class = 'form-group row'>
      <%= f.label :password_confirmation, class: 'col-md-3' %>
      <div class = 'col-md-9'>      
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>
    <div class = 'form-group row'>
      <%= f.label :gender, class: 'col-md-3' %>
      <div class = 'col-md-9'>
        <%= f.radio_button :gender, "male", class: 'form-control', class: 'col-md-1' %>Male
        <%= f.radio_button :gender, "female", class: 'form-control', class: 'col-md-1' %>Female
        <%= f.radio_button :gender, "other", class: 'form-control', class: 'col-md-1' %>Other
      </div>
    </div>
    <div class = 'form-group row'>
      <%= f.label :mobile_no, class: 'col-md-3' %>
      <div class = 'col-md-9'>
        <%= f.telephone_field :mobile_no, placeholder: 'Length should be 10', class: 'form-control' %>
      </div>
    </div>
    <div class = 'form-group row'>
      <% if @user.image.attached? %>
        <%= image_tag @user.image %>
      <% end %>
      <%= f.label :image, class: 'col-md-3' %>
      <div class = 'col-md-9'>
        <%= f.file_field :image, class: 'form-control' %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
