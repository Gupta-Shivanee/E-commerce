<div class = "row">
  <div class = "column">
    <%= render "shared/side_bar" %>
  </div>
  <div class = "column">
    <div class = containers>
      <h1>Update address</h1>
      <%= form_for @address, html: { class: 'form-horizontal center' } do |f| %>
        <div class = 'form-group row'>
          <%= f.label :house_no, class: 'col-md-3' %>
          <div class = 'col-md-9'>
            <%= f.text_field :house_no, class: 'form-control' %>
          </div>
        </div>
      <div class = 'form-group row'>
        <%= f.label :street, class: 'col-md-3' %>
        <div class = 'col-md-9'>
          <%= f.text_field :street, class: 'form-control' %>
        </div>
      </div>
      <div class = 'form-group row'>
        <%= f.label :city, class: 'col-md-3' %>
        <div class = 'col-md-9'>
          <%= f.text_field :city, class: 'form-control' %>
        </div>
      </div>
      <div class = 'form-group row'>
        <%= f.label :state, class: 'col-md-3' %>
        <div class = 'col-md-9'>
          <%= f.text_field :state, class: 'form-control' %>
        </div>
      </div>
      <div class = 'form-group row'>
        <%= f.label :country, class: 'col-md-3' %>
        <div class = 'col-md-9'>
          <%= f.text_field :country, class: 'form-control' %>
        </div>
      </div>
      <div class = 'form-group row'>
        <%= f.label :pincode, class: 'col-md-3' %>
        <div class = 'col-md-9'>
          <%= f.text_field :pincode, class: 'form-control' %>
        </div>
      </div>
      <%= f.submit "Update", class: 'btn btn-primary btn-sm' %>
    <% end %>
  </div>
</div>
