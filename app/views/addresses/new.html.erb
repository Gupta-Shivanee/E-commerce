<div class = containers>
  <h1>Add Address</h1>
  <%= form_for @address, html: { class: 'form-horizontal center' } do |f| %>
    <div class = 'form-group row'>
      <%= f.label :Userid, class: 'col-md-3' %>
      <div class = 'col-md-9'>
        <%= f.text_field :user_id, value: current_user.id, class: 'form-control' %>
      </div>
    </div>
    <div class = 'form-group row'>
      <%= f.label :House_no, class: 'col-md-3' %>
      <div class = 'col-md-9'>
        <%= f.text_field :house_no, class: 'form-control' %>
      </div>
    </div>
    <div class = 'form-group row'>
      <%= f.label :street, class: 'col-md-3' %>
      <div class = 'col-md-9'>
        <%= f.text_area :street, step: :any, class: 'form-control' %>
      </div>
    </div>
    <div class = 'form-group row'>
      <%= f.label :city, class: 'col-md-3' %>
      <div class = 'col-md-9'>
        <%= f.text_field :city, class: 'form-control' %>
      </div>
    </div>
    <div class = 'form-group row'>
      <%= f.label :state, class: 'col-md-3' %>
      <div class = 'col-md-9'>
        <%= f.text_field :state, class: 'form-control' %>
      </div>
    </div>
    <div class = 'form-group row'>
      <%= f.label :country, class: 'col-md-3' %>
      <div class = 'col-md-9'>
        <%= f.text_field :country, class: 'form-control' %>
      </div>
    </div>
    <div class = 'form-group row'>
      <%= f.label :pincode, class: 'col-md-3' %>
      <div class = 'col-md-9'>
        <%= f.number_field :pincode, class: 'form-control' %>
      </div>
    </div>
    <%= f.submit "Add", class: 'btn btn-primary btn-sm' %>
  <% end %>
</div>
