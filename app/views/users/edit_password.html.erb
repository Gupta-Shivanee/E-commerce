<%= render"shared/error_messages" %>
<div class = "row">
  <div class = "column">
    <%= render"shared/side_bar" %>
  </div>
  <div class = "column">
    <div class = containers>
      <h1>Update Password</h1>
      <%= form_for @user, html: {class: 'form-horizontal center'} do |f| %>
        <div class = 'form-group row'>
          <%= f.label :Current_password, class: 'col-md-3' %>
          <div class = 'col-md-9'>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
        </div>
        <div class = 'form-group row'>
          <%= f.label :New_password, class: 'col-md-3' %>
          <div class = 'col-md-9'>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
        </div>
        <%= f.submit "Update", class: 'btn btn-primary btn-sm' %>
      <% end %>
    </div>
  </div>
</div>
