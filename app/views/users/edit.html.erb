<%= render"shared/error_messages" %>
<div class = "row">
  <div class = "column">
    <%= render"shared/side_bar"%>
  </div>
  <div class = "column">
    <div class = containers>
      <h1>Update User Profile</h1>
      <%= form_for @user, html: {class: 'form-horizontal center'} do |f| %>
        <div class = 'form-group row'>
          <%= f.label :username, class: 'col-md-3' %>
          <div class = 'col-md-9'>
            <%= f.text_field :full_name, class: 'form-control' %>
          </div>
        </div>
      <div class = 'form-group row'>
        <%= f.label :password, class: 'col-md-3' %>
        <div class = 'col-md-9'>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      </div>
      <div class = 'form-group row'>
        <%= f.label :mobile_no, class: 'col-md-3' %>
        <div class = 'col-md-9'>
          <%= f.telephone_field :mobile_no, placeholder: 'Length should be 10', class: 'form-control' %>
        </div>
      </div>
      <div class = 'form-group row'>
        <%= f.label :image, class: 'col-md-3' %>
          <% if @user.image.attached? %>
            <%= image_tag @user.image, height: 200, width: 200, class: "mt-2 ml-4" %>
          <% end %>
        <div class = 'col-md-9 ml-5 mt-2'>
          <%= f.file_field :image, class: 'form-control' %>
        </div>
      </div>
      <%= f.submit "Update", class: 'btn btn-primary btn-sm' %>
    <% end %>
  </div>
</div>
