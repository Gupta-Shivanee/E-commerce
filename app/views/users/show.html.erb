<% if current_user %>
  <%= "Hello #{current_user.full_name}" %><br> 
  <%= "You are now logged in" %><br> 
  <br><%= "Email:- #{current_user.email}" %><br>
  <%= "Contact No:- #{current_user.mobile_no}" %><br>
  <%= button_to 'Logout', session_path(current_user.id), method: :delete %> 
<% else %>
  <%= link_to 'Home', root_path %>
<% end %>
