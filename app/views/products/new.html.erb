<div class = containers>
  <h1>Add Product</h1>
  <%= form_for @product, html: { class: 'form-horizontal center' } do |f| %>
    <div class = 'form-group row'>
      <%= f.label :product, class: 'col-md-3' %>
      <div class = 'col-md-9'>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
    <div class = 'form-group row'>
      <%= f.label :Userid, class: 'col-md-3' %>
      <div class = 'col-md-9'>
        <%= f.text_field :user_id, value: current_user.id, class: 'form-control' %>
      </div>
    </div>
    <div class = 'form-group row'>
      <%= f.label :price, class: 'col-md-3' %>
      <div class = 'col-md-9'>
        <%= f.number_field :price, step: :any, class: 'form-control' %>
      </div>
    </div>
    <div class = 'form-group row'>
      <%= f.label :desription, class: 'col-md-3' %>
      <div class = 'col-md-9'>
        <%= f.text_area :description, class: 'form-control' %>
      </div>
    </div>
    <div class = 'form-group row'>
      <%= f.label :quantity, class: 'col-md-3' %>
      <div class = 'col-md-9'>
        <%= f.number_field :quantity, class: 'form-control' %>
      </div>
    </div>
    <div class = 'form-group row'>
      <%= f.label :images, class: 'col-md-3' %>
      <div class = 'col-md-9'>
        <%= f.file_field :image, multiple: true,  class: 'form-control' %>
      </div>
    </div>
    <%= f.submit "Add", class: 'btn btn-primary btn-sm' %>
  <% end %>
</div>
