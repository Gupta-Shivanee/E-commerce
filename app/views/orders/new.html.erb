<%= form_for(@order) do |f| %>
  <%= f.label :name %>
  <%= current_user.full_name %><br>
    
  <%= f.label :email %>
  <%= current_user.email %><br>
    
  <%= f.label :status %><br>
  <%= f.text_field :status %><br>
     
  <%= f.label :user_id %><br>
  <%= f.text_field :user_id, value: current_user.id %><br>
    
  <%= f.label :address %><br>
    
  <% @address = current_user.addresses.all %><br>
  <% @address.each do |address| %>
    <div class = "mb-3">
      <%= f.check_box :address_id %>
      <%= "Address:- #{address.house_no}, #{address.street}, #{address.city},#{address.state}, #{address.country}, pin-code #{address.pincode}" %>
    </div>
  <% end %>
  
  <%= f.label :Total %>
  <%= ":-  " %>
  <%= @current_cart.sub_total %><br>
   
  <%= f.submit %><br>
<% end %>
