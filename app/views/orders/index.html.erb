<h2>All Orders</h2>
<%= "Name: #{current_user.full_name}" %>
<%= "Email: #{current_user.email}" %>
<% @orders.each do |order| %>
  <p>Placed Items: </p>
  <ul>
    <% order.cart_items.each do |item| %>
      <li><%= item.quantity %> x <%= item.product.name %></li>
    <% end %>
    <% @address = current_user.addresses.where(id: order.address_id) %>
    <% @address.each do |address| %>
      <%= "#{address.house_no}, #{address.street}, #{address.city}, #{address.state}, #{address.country}, pincode- #{address.pincode}" %>
    <% end %>
    <div>
    <%= "Total #{order.total}" %>
    </div>
  </ul>
  <hr>
<% end %>
