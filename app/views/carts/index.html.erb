<h2>Cart Details</h2>
<% @cart.cart_items.each do |cart_item| %>
  <ul>
    <li>Item: <%= cart_item.product.name %>/ Price: <%= cart_item.product.price %>/ Quantity: <%= cart_item.quantity %>/ Total Price: <%= cart_item.total_price %>
    </li>
    <ul>
      <li>
        <%= link_to "Add one", cart_item_add_path(id: cart_item), method: :post %>
        <%= link_to "Reduce one", cart_item_reduce_path(id: cart_item), method: :post %>
      </li>
      <li>
        <%= link_to "Remove item", cart_item_path(cart_item), method: :delete %>
      </li>
    </ul>
  </ul>  
<% end %>
<h3>Sub total: <%= @cart.sub_total %> Rs.</h3>
<%= link_to "Proceed to checkout", new_order_path %><br>
<%= link_to "Back", products_path %>
